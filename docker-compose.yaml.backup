version: "3.8"

volumes:
  ${COMPOSE_POSTGRES_VOLUME_NAME}:
  ${COMPOSE_STATIC_VOLUME_NAME}:
  ${COMPOSE_MEDIA_VOLUME_NAME}:

networks:
  ${COMPOSE_NETWORK_NAME}:
    driver: bridge

services:
  ${DJANGO_APP_CONTAINER}:
    build: .
    container_name: ${DJANGO_APP_CONTAINER}
    command: >
      sh -c "
        python manage.py wait_for_db &&
        python manage.py migrate &&
        python manage.py collectstatic --noinput &&
        python manage.py update_countries_plus &&
        daphne -b 0.0.0.0 -p 9000 src.asgi:application
      "
    volumes:
      - ./:/app
      - ${COMPOSE_STATIC_VOLUME_NAME}:/app/static
      - ${COMPOSE_MEDIA_VOLUME_NAME}:/app/media
    env_file:
      - .env
    environment:
      - DB_HOST=${POSTGRES_CONTAINER}
      - REDIS_HOST=${REDIS_CONTAINER}
      - DJANGO_SETTINGS_MODULE=src.config.local
    depends_on:
      ${POSTGRES_CONTAINER}:
        condition: service_healthy
      ${REDIS_CONTAINER}:
        condition: service_started
    expose:
      - "9000"
    networks:
      - ${COMPOSE_NETWORK_NAME}
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/api/v1/users/health/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s

  ${POSTGRES_CONTAINER}:
    image: postgres:15
    container_name: ${POSTGRES_CONTAINER}
    environment:
      - POSTGRES_DB=${DB_NAME}
      - POSTGRES_USER=${DB_USER}
      - POSTGRES_PASSWORD=${DB_PASSWORD}
    volumes:
      - ${COMPOSE_POSTGRES_VOLUME_NAME}:/var/lib/postgresql/data
    networks:
      - ${COMPOSE_NETWORK_NAME}
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${DB_USER} -d ${DB_NAME}"]
      interval: 10s
      timeout: 5s
      retries: 5

  ${REDIS_CONTAINER}:
    image: redis:7
    container_name: ${REDIS_CONTAINER}
    command: ["redis-server", "--appendonly", "yes"]
    networks:
      - ${COMPOSE_NETWORK_NAME}
    restart: unless-stopped

  ${NGINX_CONTAINER}:
    build:
      context: .
      dockerfile: nginx/Dockerfile
    depends_on:
      ${DJANGO_APP_CONTAINER}:
        condition: service_healthy
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ${COMPOSE_STATIC_VOLUME_NAME}:/app/static
      - ${COMPOSE_MEDIA_VOLUME_NAME}:/app/media
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf
      - ./nginx/conf.d:/etc/nginx/conf.d
      - ./certbot/conf:/etc/letsencrypt
      - ./certbot/www:/var/www/certbot
      - ./nginx/start-nginx.sh:/start-nginx.sh
    command: ["/bin/bash", "/start-nginx.sh"]
    networks:
      - ${COMPOSE_NETWORK_NAME}
    restart: unless-stopped
    environment:
      - DOMAIN=${DOMAIN}
    container_name: ${NGINX_CONTAINER}

  ${CERTBOT_CONTAINER}:
    image: certbot/certbot
    volumes:
      - ./certbot/conf:/etc/letsencrypt
      - ./certbot/www:/var/www/certbot
    depends_on:
      - ${NGINX_CONTAINER}
    entrypoint: >
      /bin/sh -c 'trap exit TERM; while :; do certbot renew; sleep 12h & wait $${!}; done;'
    networks:
      - ${COMPOSE_NETWORK_NAME}
    container_name: ${CERTBOT_CONTAINER}
